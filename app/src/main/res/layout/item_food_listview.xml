<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_listView1_items_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonstyle"
    android:orientation="vertical"
    android:padding="@dimen/size10dp">


    <ImageView
        android:id="@+id/itemPicture"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/no_pic"
        android:layout_marginBottom="@dimen/size10dp"/>
    <RelativeLayout
        android:layout_below="@+id/itemPicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c333"
            android:text="一碗香"
            android:layout_alignBottom="@+id/btnDianCai"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_toRightOf="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textStyle="italic"
            android:textColor="@color/c333"
            android:layout_alignBottom="@+id/btnDianCai"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv1"/>

        <TextView
            android:layout_toRightOf="@+id/tv1"

            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnDianCai"
            android:layout_marginLeft="5dp"
            android:text="18"
            android:textColor="@color/c333"
            android:textStyle="italic" />

        <TextView
            android:layout_toRightOf="@+id/itemPrice"
            android:id="@+id/itemSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/btnDianCai"
            android:text="价格"
            android:textColor="@color/c333"
            android:textStyle="italic|bold" />

        <Button
            android:id="@+id/btnDianCai"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonstylered"
            android:layout_alignParentRight="true"
            android:text="@string/dingcai" />
    </RelativeLayout>
</RelativeLayout>
