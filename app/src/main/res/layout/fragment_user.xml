<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    >

    <LinearLayout
        android:id="@+id/llUserInfo"
        android:layout_marginTop="@dimen/size10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/selector_user_info_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/default_header" />

        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c333"
                android:text="@string/first_login"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/c333"
                android:text="积分：0      余额 ： 0"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>



        <RelativeLayout
            android:id="@+id/rlBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingLeft="@dimen/size10dp"
            android:background="@drawable/selector_user_info_bg" >
            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/home_menu_home_icon"
                android:gravity="left|center"
                android:textColor="@color/c333"
                android:text="我要订餐"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/rlOrder"
            android:textColor="@color/c333"
            android:paddingLeft="@dimen/size10dp"
            android:background="@drawable/selector_user_info_bg">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/home_menu_order_list_icon"
                android:gravity="left|center"
                android:text="我的订单"
                android:textColor="@color/c333"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#f0f0f0" 
            android:visibility="gone">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/home_menu_gift_icon"
                android:gravity="left|center"
                android:text="已完成的订单"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/size10dp"
            android:background="@drawable/selector_user_info_bg"
            >

            <Button
                android:id="@+id/btn_abouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/home_menu_aboutus_icon"
                android:gravity="left|center"
                android:text="关于我们"
                android:textColor="@color/c333"
                android:textSize="20sp" />
        </RelativeLayout>


</LinearLayout>